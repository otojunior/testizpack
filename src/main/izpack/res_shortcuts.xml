<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">
 	
 	<defaultCurrentUser/>
 	
	<programGroup defaultName="TestIzPack Company"/>
	
	<shortcut 
		name="Uninstall TestIzPack"
		subgroup="/TestIzPackSoft" 
		target="${INSTALL_PATH}/Uninstaller/uninstaller.jar"
		iconFile="${INSTALL_PATH}/lixeira.ico" 
		programGroup="true" />
	
	<shortcut 
		name="TestIzPack Software" 
		subgroup="/TestIzPackSoft"
		target="${INSTALL_PATH}/testizpack.jar"
		workingDirectory="${INSTALL_PATH}"
		iconFile="${INSTALL_PATH}/foguete.ico"
		programGroup="true"
		desktop="true" 
		createForAll="true"/>

</izpack:shortcuts>